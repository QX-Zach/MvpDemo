<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ozner.mvpdemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mvpTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mvp测试" />

        <Button
            android:id="@+id/btn_buletooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙" />

        <Button
            android:id="@+id/btn_scanBlueTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙扫描" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_boardTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画图板" />

        <Button
            android:id="@+id/btn_dateUtils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间格式化DateUtils"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_perCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.0权限测试" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_flipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="viewFlip"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_lightingColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LightingColorFilter"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_slip_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="侧滑ListView"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_encodeUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="viewFlip"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_downloadFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件下载" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录测试" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="滤芯有效期" />

        <Button
            android:id="@+id/btn_checkLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查当前语言" />

        <Button
            android:id="@+id/btn_btUUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动更新" />
    </LinearLayout>

</LinearLayout>
